<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Articles"
            android:textSize="20sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Categories Tabs -->
    <HorizontalScrollView
        android:id="@+id/categoriesScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:scrollbars="none"
        android:paddingVertical="12dp"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/categoriesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Tanah"
                android:paddingHorizontal="20dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/category_background_selected"
                android:layout_marginEnd="12dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Tanaman"
                android:paddingHorizontal="20dp"
                android:gravity="center"
                android:textColor="#666666"
                android:background="@drawable/category_background"
                android:layout_marginEnd="12dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Cuaca"
                android:paddingHorizontal="20dp"
                android:gravity="center"
                android:textColor="#666666"
                android:background="@drawable/category_background"
                android:layout_marginEnd="12dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Hama"
                android:paddingHorizontal="20dp"
                android:gravity="center"
                android:textColor="#666666"
                android:background="@drawable/category_background"
                android:textSize="14sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Articles RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewArticles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/categoriesScrollView"
        android:padding="16dp"
        android:clipToPadding="false" />

</RelativeLayout>